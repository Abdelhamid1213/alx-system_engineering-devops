#!/bin/bash

# MySQL dump file name
dump_file="backup.sql"

# Compressed archive name format: day-month-year.tar.gz
archive_name="$(date +'%d-%m-%Y').tar.gz"

# MySQL root user password passed as argument
mysql_password="$1"

# Directory to store the backup files
backup_dir="/path/to/backup/dir"

# Change to the backup directory
cd "$backup_dir" || exit

# Generate MySQL dump for all databases
mysqldump -u root -p"$mysql_password" --all-databases > "$dump_file"

# Check if the dump was successful
if [ $? -ne 0 ]; then
    echo "Error: MySQL dump failed."
    exit 1
fi

# Create compressed archive
tar -czvf "$archive_name" "$dump_file"

# Check if the archive was created successfully
if [ $? -ne 0 ]; then
    echo "Error: Creating compressed archive failed."
    exit 1
fi

# Remove the uncompressed dump file
rm "$dump_file"

echo "MySQL backup completed successfully. Archive: $archive_name"

