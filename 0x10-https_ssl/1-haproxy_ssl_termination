global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option  forwardfor
    option  http-server-close

frontend redirect-http
    bind   0.0.0.0:80
    mode   http
    redirect prefix https://www.malloc.tech code 301 if { hdr(host) -i malloc.tech }

frontend www-http
    bind   0.0.0.0:80
    http-request add-header X-Forwarded-Proto http
    redirect scheme https code 301 if !{ ssl_fc }

frontend www-https
    bind   0.0.0.0:443 ssl crt /etc/haproxy/certs/www.malloc.tech.pem
    http-request add-header X-Forwarded-Proto https
    acl    letsencrypt-acl path_beg /.well-known/acme-challenge/
    use_backend letsencrypt-backend if letsencrypt-acl
    default_backend www-backend

backend www-backend
    balance  roundrobin
    redirect scheme https if !{ ssl_fc }
    server 444371-web-01 52.23.213.16:80 check
    server 444371-web-02 54.88.154.180:80 check

backend letsencrypt-backend
    server letsencrypt 127.0.0.1:54321
